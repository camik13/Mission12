@{
    ViewData["Title"] = "Delete Appointment";
}

@model Appointment

<h2>Confirm Deletion</h2>
<br />
<h3>Are you sure you want to delete @Model.AppointmentTime?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit" class="btn" style="border-color: #f44336; background: #f44336; color: white; border-radius: 5px ">Delete</button>
    <a asp-controller="Home" asp-action="ViewAppointments" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="AppointmentID" />
</form>